{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "address": "127.0.0.1:12306",
            "name": "cclua",
            "request": "attach",
            "stopOnEntry": true,
            "type": "lua",
            "windows": {
                "preLaunchTask": "luadebug",
            },
            "osx": {
                "preLaunchTask": "luadebug",
            },
            "sourceMaps": [
                [
                    "*",
                    "${workspaceFolder}/assets/*"
                ]
            ]
        },
        {
            "type": "LuaHelper-Debug",
            "request": "launch",
            "name": "LuaPanda",
            "description": "通用模式,通常调试项目请选择此模式",
            "cwd": "${workspaceFolder}/assets",
            "luaFileExtension": "",
            "connectionPort": 8818,
            "stopOnEntry": true,
            "useCHook": true,
            "windows": {"preLaunchTask": "luapanda"},
            "osx": {"program": "${workspaceFolder}/tools/bin/luapanda.sh"},
            "autoPathMode": true
        }
    ]
}