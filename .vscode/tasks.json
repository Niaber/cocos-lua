{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "luadebug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/assets"
            },
            "args": ["--workdir", "${workspaceFolder}/assets", "--lua-debug", "luadebug"],
            "windows": {
                "command": "${workspaceFolder}/build/vs-build/bin/cclua/Debug/cclua.exe",
            },
            "osx": {
                "command": "${workspaceFolder}/build/mac-build/bin/cclua/Debug/cclua.app/Contents/MacOS/cclua",
            }
        },
        {
            "label": "luapanda",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/assets"
            },
            "args": ["--workdir", "${workspaceFolder}/assets", "--lua-debug", "luapanda"],
            "windows": {
                "command": "${workspaceFolder}/build/vs-build/bin/cclua/Debug/cclua.exe",
            },
            "osx": {
                "command": "${workspaceFolder}/build/mac-build/bin/cclua/Debug/cclua.app/Contents/MacOS/cclua",
            }
        },
        {
            "label": "build-builtin-manifest",
            "type": "shell",
            "options": {
                "cwd": "tools/hot-update"
            },
            "command": "lua build-update.lua --debug --setting BUILTIN",
        },
        {
            "label": "build-local-manifest",
            "type": "shell",
            "options": {
                "cwd": "tools/hot-update"
            },
            "command": "lua build-update.lua --debug --setting LOCAL",
        }
    ]
}